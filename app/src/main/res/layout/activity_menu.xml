<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kanjiCrush.game.MenuActivity"
    android:background="@color/grey_darkest">

    <ImageView
        android:id="@+id/titleImage"
        android:background="@drawable/title_screen"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="@string/title_image"/>

    <RelativeLayout
        android:id="@+id/relLayout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleImage">
        <Button
            android:id="@+id/startGameButton"
            android:text="@string/start_game_text"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/resetButton"
            android:text="@string/reset_text"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@id/startGameButton"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/preferencesButton"
            android:text="@string/preferences_text"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@id/resetButton"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>
